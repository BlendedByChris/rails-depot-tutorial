<h2>Your Pragmatic Cart</h2>

<table>
  <% for item in @cart.items %>
    <tr>
      <td><%= item.quantity %></td>
      <td><%=h item.title %></td>
      <td><%= number_to_currency(item.price) %></td>
    </tr>
  <% end %>
  <tr class="total-line">
    <td colspan="2">Total</td>
    <td class="total-cell"><%= number_to_currency(@cart.total_price) %>  </td>
  </tr>
</table>

<%= button_to 'Empty cart', :action => 'empty_cart' %>